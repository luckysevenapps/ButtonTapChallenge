                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/classic_button_toggle_anim"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleButton13"
                    android:layout_width="@dimen/button_madness_xlarge_button_size_width"
                    android:layout_height="@dimen/button_madness_xlarge_button_size_height"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/classic_button_toggle_anim"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleButton14"
                    android:layout_width="@dimen/button_madness_xlarge_button_size_width"
                    android:layout_height="@dimen/button_madness_xlarge_button_size_height"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/classic_button_toggle_anim"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleButton15"
                    android:layout_width="@dimen/button_madness_xlarge_button_size_width"
