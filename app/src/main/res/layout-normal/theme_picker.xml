<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_picker_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#111111"
            android:alpha="0.5"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:id="@+id/scroll_view_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#111111"
            android:layout_weight="1">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_default_theme_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:src="@drawable/default_theme_preview_x"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/imageView_tmnt_theme_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:src="@drawable/tmnt_preview_image"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/imageView_batman_theme_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:src="@drawable/batman_preview_image"
                        android:clickable="true" />

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:alpha="0.5"
        android:background="#111111"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>